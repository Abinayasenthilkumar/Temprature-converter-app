<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:background="@drawable/img"
    android:orientation="vertical"
>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/temp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temprature Converter"
        android:layout_gravity="center_horizontal"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_marginTop="22dp"/>


    <EditText
        android:id="@+id/entertemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#A77AAF"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Enter temprature"
        android:inputType="numberDecimal"
        android:padding="9dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>


    <Button
        android:id="@+id/ctof"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#51A5AF"
        android:padding="9dp"
        android:text="Celsius to Farenhite"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:cornerRadius="21dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/ftoc"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#51A5AF"
        android:padding="9dp"
        android:text=" Farenhite to Celsius "
        android:textSize="16sp"
        app:cornerRadius="21dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="0 degree"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"/>






</LinearLayout>




